<h1>IT Index's page</h1>


<div class="grid-container">
    <ul>
        <% @users.each do |user| %>
            <li>
                <p><b>Name: </b><%= user["name"] %><b> Email: </b><%= user["email"] %><b> Role: </b><%= user["role"] %> </p>
            </li>
        <% end %>
    </ul>
</div>

<div class="grid-container">
    <ul>
        <% @clients.each do |client| %>
            <li>
                <p><b>Company: </b><%= client["name"] %><b> Address: </b><%= client["address"] %></p>
            </li>
        <% end %>
    </ul>
</div>


<a href="/new/records">Create a new report</a><br>
<div class="grid-container">
    <ul>
        <% @reports.each do |reports| %>
            <li>
                <p><b>Date: </b><%= reports["date"] %><b> Author: </b><%= reports["name"] %><b> Company: </b><%= reports["company_name"] %><b> Report: </b><%= reports["report"] %></p>
                <form action="/records" method="post">
                    <input type="hidden" name="_method" value="delete">
                    <input type="hidden" name="report_id" value=<%= reports["id"] %>>
                    <button>delete</button>
                </form>
                <a href="/records/<%= reports['id'] %>/edit">edit</a>
            </li>
        <% end %>
    </ul>
</div>


